{
    "compilerOptions": {
        "target": "ES2020",
        "composite": true,
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "./dist-server",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "api/**/*.ts",
        "server/src/**/*.ts"
    ]
}